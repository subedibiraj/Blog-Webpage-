<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NodeJs</title>
  <style>
    /* Root Variables */
    :root {
      --black: #1c1c1c;
      --gray: #7E7E7E;
      --gray-light: #E4E4E4;
      --blue: #007bff;
      --font-size-base: 1rem;
      --font-size-md: clamp(1.25rem, 0.61vw + 1.1rem, 1.58rem);
      --font-size-lg: clamp(1.56rem, 1vw + 1.31rem, 2.11rem);
      --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
      --border-radius: 8px;
    }

    /* Header Styling */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #2c3e50;
      color: white;
      padding: 15px 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .header__logo {
      font-size: 1.5rem;
      font-weight: 600;
      color: white;
      text-decoration: none;
      transition: color 0.3s;
    }

    .header__logo:hover {
      color: #a3d4f7;
    }

    .header__nav ul {
      list-style-type: none;
      display: flex;
      gap: 20px;
      margin: 0;
      padding: 0;
    }

    .header__nav-link {
      text-decoration: none;
      color: white;
      font-weight: 500;
      transition: color 0.3s;
    }

    .header__nav-link:hover {
      color: #a3d4f7;
    }

    .header__button {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .searchBtn {
      background-color: transparent;
      color: white;
      border: none;
      cursor: pointer;
      padding: 8px 15px;
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 1rem;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .searchBtn:hover {
      background-color: #34495e;
    }

    .searchBtn svg {
      fill: white;
    }

    /* Small adjustments for the search icon */
    .searchBtn svg {
      width: 20px;
      height: 20px;
    }

    /* Search Bar Styling */
    .searchBar {
      display: none; /* Hidden by default */
      padding: 20px;
      background: white;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin: 15px;
    }
  </style>
</head>
<body>

  <header class="header">
    <a href="/" class="header__logo">NodeJs</a>

    <nav class="header__nav">
      <ul>
        <li><a href="/" class="header__nav-link">Home</a></li>
        <li><a href="/about" class="header__nav-link">About</a></li>
        <li><a href="/contact" class="header__nav-link">Contact</a></li>
      </ul>
    </nav>

    <div class="header__button">
      <button class="searchBtn" aria-expanded="false" id="toggleSearchBtn">
        Search
        <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M7.79167 13.4583C10.9213 13.4583 13.4583 10.9213 13.4583 7.79167C13.4583 4.66205 10.9213 2.125 7.79167 2.125C4.66205 2.125 2.125 4.66205 2.125 7.79167C2.125 10.9213 4.66205 13.4583 7.79167 13.4583Z" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M14.875 14.875L11.7938 11.7938" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </header>

  <!-- Search Bar -->
  <div class="searchBar" id="searchBar">
    <div class="container">
      <form action="/search" method="POST" class="search__form" role="search">
        <input 
          type="search"
          aria-label="Search"
          id="searchInput"
          name="searchTerm"
          placeholder="Search the site..."
          style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px;"
        >
      </form>
    </div>
  </div>

  <script>
    // JavaScript to toggle search bar visibility
    const toggleSearchBtn = document.getElementById('toggleSearchBtn');
    const searchBar = document.getElementById('searchBar');

    toggleSearchBtn.addEventListener('click', () => {
      const isExpanded = toggleSearchBtn.getAttribute('aria-expanded') === 'true';
      toggleSearchBtn.setAttribute('aria-expanded', !isExpanded);
      searchBar.style.display = isExpanded ? 'none' : 'block';
    });
  </script>

</body>
</html>
