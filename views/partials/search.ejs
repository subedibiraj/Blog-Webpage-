<div class="searchBar article">
  <div class="container">
    <form action="/search" method="POST" class="search__form" role="search">
      <input 
        type="search"
        aria-label="Search"
        id="searchInput"
        name="searchTerm"
        placeholder="Search the site..."
        style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc; border-radius: 4px;"
      >
    </form>
    <div id="searchClose" style="margin-top: 10px; cursor: pointer; color: #2c3e50;">Close</div>
  </div>
</div>
