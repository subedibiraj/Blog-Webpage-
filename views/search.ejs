<div class="author">
  <h1 class="author__heading">Search Results</h1>
</div>

<section class="articles article">
  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li style="margin-bottom: 10px; padding: 10px; border-bottom: 1px solid #eee;">
        <a href="/post/<%= post._id %>" style="text-decoration: none; color: #2c3e50;">
          <span style="font-size: 1.2em; font-weight: bold;"><%= post.title %></span>
          <span class="article-list__date" style="display: block; margin-top: 5px; font-size: 0.9em; color: #555;"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>
</section>
