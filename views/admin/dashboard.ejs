<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Posts</title>
  <!-- Include Quill CSS for consistency (if applicable) -->
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <!-- Main Styling -->
  <style>
    /* Root Variables */
    :root {
      --black: #1c1c1c;
      --gray: #7E7E7E;
      --gray-light: #E4E4E4;
      --red: #b30000;
      --font-size-base: 1rem;
      --font-size-md: clamp(1.25rem, 0.61vw + 1.1rem, 1.58rem);
      --font-size-lg: clamp(1.56rem, 1vw + 1.31rem, 2.11rem);
      --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);
      --border-radius: 8px;
    }

    /* Global Styles */
    body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      margin: 0;
      padding: 20px;
      line-height: 1.6;
      color: #333;
      background: #f7f9fc;
    }

    a {
      color: #2c3e50;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    /* Container Styling */
    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
    }

    /* Admin Title */
    .admin-title {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .admin-title h2 {
      margin: 0;
      font-size: var(--font-size-lg);
      color: #2c3e50;
    }

    .admin-title .btn {
      background-color: #2c3e50;
      color: white;
      padding: 10px 15px;
      border-radius: var(--border-radius);
      text-decoration: none;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .admin-title .btn:hover {
      background-color: #34495e;
    }

    /* Admin Posts List */
    .admin-posts {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .admin-posts li {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 10px;
      margin-bottom: 10px;
      background: #ffffff;
      border-radius: var(--border-radius);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    .admin-posts li a {
      color: #2c3e50;
      font-weight: 600;
    }

    .admin-post-controls {
      display: flex;
      gap: 10px;
    }

    /* Buttons */
    .btn-delete {
      background-color: var(--red);
      color: white;
      padding: 6px 12px;
      border-radius: var(--border-radius);
      cursor: pointer;
      border: none;
      transition: background-color 0.3s;
    }

    .btn-delete:hover {
      background-color: #ff4d4d;
    }
  </style>
</head>
<body>
  <div class="container main">
    <div class="admin-title">
      <h2>Posts</h2>
      <a href="/add-post" class="btn">+ Add New</a>
    </div>

    <ul class="admin-posts">
      <% data.forEach(post => { %>
        <li>
          <a href="/post/<%= post._id %>" class="admin-post-link">
            <%= post.title %> &nearr;
          </a>
          <div class="admin-post-controls">
            <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
            <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
              <input type="submit" value="Delete" class="btn-delete">
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
